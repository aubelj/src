{% extends "URAdminBundle::adminLayout.html.twig" %}

{% block currentPage %}
	<h1>Loyalty administration panel</h1>
	<a href="{{ path('ur_admin_loyalty_add') }}">
		<button>Add</button>
	</a>
	<br />
	<br />
	<table>
		   	<tr>
		   		<th>Company</th>
		   		<th>Front cover</th>
		   		<th>Back cover</th>
		   		<th></th>
		   	</tr>
	    {% for card in loyalty %}
		   	<tr>
		   		<td>
		   			{{ card.company.name }}
		   		</td>
				<td>
					<img src="{{ asset(card.frontCover) }}" width='150px' height='80px'></img>
				</td>
				<td>
					<img src="{{ asset(card.backCover) }}" width='150px' height='80px'></img>
				</td>
				<td>
					<a href="{{ path('ur_admin_loyalty_delete', {'id':card.id}) }}" onclick="return confirm('Cette carte de fidélité ainsi que toutes ses dépendances vont être supprimées. Continuer ?')">
						<button>Delete</button>
					</a>
				</td>
			</tr>
	    {% endfor %}

	</table>
{% endblock %}